#include <stdio.h>
#include <stdlib.h> 
#include <vector> // 동적 할당 
#include <algorithm> // abs 
#include <stack>
using namespace std;  

// 올바른 괄호  

int main(){
	freopen("input.txt", "rt", stdin);
	stack<char> s; 
	char a[50]; 
	int i; 
	scanf("%s", &a);
	for(i=0; a[i]!='\0'; i++){
		if(a[i]=='(') s.push(a[i]);
		else{
			if(s.empty()){
				printf("NO\n");
				break;
			}
			else s.pop();
		}
	}
	if(s.empty()) printf("YES\n");
	else printf("NO\n");
	return 0;
} 
